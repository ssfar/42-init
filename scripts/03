	matrix 'Your password is your hostname'
	matrix 'Good luck !'

# Password authentification
echo "Initialisation..."
sleep 1
echo "Connection to the Matrice..."
sleep 1
echo "Password required."
sleep 1
pass=$(hostname)
echo -n "Enter the password: "
read -s mdp
sleep 0.3
echo "" 
while [ "$mdp" != "$pass" ]
do
	echo "\e[0;31mError, password incorrect !\e[0m"
	sleep 0.3
	echo "If you forgot your password, please contact an administrator"
	sleep 1
	matrix 'I have setup an access for you, the password is your hostname'
	echo -n "Enter the password: "
	read -s mdp
	sleep 1
	echo ""
done


	echo "       /::::\    \             /::::\    \             /::::\    \             /::::\    \             /::::\    \       "
	echo "      /::::::\    \           /::::::\    \           /::::::\    \           /::::::\    \           /::::::\    \      "
	echo "     /:::/\:::\    \         /:::/\:::\    \         /:::/\:::\    \         /:::/\:::\    \         /:::/\:::\    \     "
	echo "    /:::/__\:::\    \       /:::/__\:::\    \       /:::/__\:::\    \       /:::/__\:::\    \       /:::/__\:::\    \    "
	echo "    \:::\   \:::\    \      \:::\   \:::\    \     /::::\   \:::\    \     /::::\   \:::\    \     /::::\   \:::\    \   "
	echo "  ___\:::\   \:::\    \   ___\:::\   \:::\    \   /::::::\   \:::\    \   /::::::\   \:::\    \   /::::::\   \:::\    \  "
	echo " /\   \:::\   \:::\    \ /\   \:::\   \:::\    \ /:::/\:::\   \:::\    \ /:::/\:::\   \:::\    \ /:::/\:::\   \:::\____\ "
	echo "/::\   \:::\   \:::\____/::\   \:::\   \:::\____/:::/  \:::\   \:::\____/:::/  \:::\   \:::\____/:::/  \:::\   \:::|    |"
	echo "\:::\   \:::\   \::/    \:::\   \:::\   \::/    \::/    \:::\   \::/    \::/    \:::\  /:::/    \::/   |::::\  /:::|____|"
	echo " \:::\   \:::\   \/____/ \:::\   \:::\   \/____/ \/____/ \:::\   \/____/ \/____/ \:::\/:::/    / \/____|:::::\/:::/    / "
	echo "  \:::\   \:::\    \      \:::\   \:::\    \              \:::\    \              \::::::/    /        |:::::::::/    /  "
	echo "   \:::\   \:::\____\      \:::\   \:::\____\              \:::\____\              \::::/    /         |::|\::::/    /   "
	echo "    \:::\  /:::/    /       \:::\  /:::/    /               \::/    /              /:::/    /          |::| \::/____/    "
	echo "     \:::\/:::/    /         \:::\/:::/    /                 \/____/              /:::/    /           |::|  ~|          "
	echo "      \::::::/    /           \::::::/    /                                      /:::/    /            |::|   |          "
	echo "       \::::/    /             \::::/    /                                      /:::/    /             \::|   |          "
	echo "        \::/    /               \::/    /                                       \::/    /               \:|   |          "
	echo "\e[0;34m         \/____/                 \/____/                                         \/____/                 \|___|          \e[0m"
	echo "                                                                                                                         "
	echo "                                                                                                                         "
	echo $1
	sleep $2
}


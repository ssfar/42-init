#!/bin/zsh
clear

# Print text in green with a typing effect, clear the terminal after a short delay.
matrix()
{
	for ((i=0; i<=${#1}; i++)); do
		printf '\e[1;32m%s\e[0m' "${1:$i:1}"
		sleep 0.05
	done
	sleep 1.5
	clear
}

print_skull_forehead()
{
	echo '----------------------------------------------------'
	echo '|                                                  |'
	echo '|               :+:::::::------:-:+:`              |'
	echo '|           -++s:.`.````` ``...`` .:+oo.           |'
	echo '|        .os:--                     `.:+s+`        |'
	echo '|      .oo.--`                         `--s+`      |'
	echo '|     +s.--                              `-:y/     |'
	echo '|   .y/:-.`                                ` +y.   |'
	echo '|  .s-o` `.`                                  -h-  |'
	echo '| .s.y/-- .                                  ` .h- |'
	echo '| y.om:/o.                                   :  .h |'
	echo '|/+-yNy y/.                                  /   +/|'
	echo '|h` oNN--y/-`                               :.   `h|'
	echo '|m  /hNy yso:`                              s`    m|'
	echo '|m. /dmN`-dho:-`   -:.       `-..-.``      -h`   .m|'
	echo '|oo :dNN/ ..```` ` ````    ..``      `     os:   so|'
}

# Print skull eyes in ascii art.
# First parameter : boolean to enable red color.
print_skull_eyes()
{
	if [ $1 = 0 ]
	then
		echo '|`m`.smm`  .-/sdhyy/-.`-:.:: `.:+oyy+/:-`  :y/  .m`|'
		echo '| /o .yy/ohmNNNNNNNNNmdmyo/+++yNNNNNNNNmdyo:d.  s/ |'
		echo '|  s/`os.mNNNNNNNNNNNNNms-`o/+NNNNNNNNNNNNy`+` /s  |'
		echo '|  :yo:d-hmNNNNNNNNNNNhho-.+/-mNNNNNNNNNNNo-`:-d/  |'
		echo '|  `h+.d:+dmmmNNmNmmy:-/hosh`.:sddNNNNNNNmo:` od`  |'
		echo '|   y- :oooysyso::::+/:yNmhNs++/-:/ssooyo:::  .h`  |'
	else
		echo -e -n "\a"
		echo '|`m`.smm`  .\e[1;31m-/sdhyy/-\e[0m.`-:.:: `.:\e[1;31m+oyy+/:-\e[0m`  :y/  .m`|'
		echo '| /o .yy/\e[1;31mohm\e[0;31mNNNNNNNNN\e[1;31mm\e[0mdmyo/+++\e[1;31my\e[0;31mNNNNNNNN\e[1;31mm\e[0mdyo:d.  s/ |'
		echo '|  s/`os.\e[1;31mm\e[0;31mNNNNNNNNNNNNN\e[1;31mm\e[0ms-`o/\e[1;31m+\e[0;31mNNNNNNNNNNNN\e[1;31my\e[0m`+` /s  |'
		echo '|  :yo:d-\e[1;31mhm\e[0;31mNNNNNNNNNNN\e[1;31mh\e[0mho-.+/-\e[1;31mm\e[0;31mNNNNNNNNNNN\e[1;31m\e[0mo-`:-d/  |'
		echo '|  `h+.d:+\e[1;31mdmmm\e[0;31mNNmN\e[1;31mm\e[0mmy:-/hosh`.:\e[1;31ms\e[0;31mddNNNNNNN\e[1;31mm\e[0mo:` od`  |'
		echo '|   y- :oooysy\e[1;31mso::\e[0m::+/:yNmhNs++/-\e[1;31m:/ssooy\e[0mo:::  .h`  |'
	fi
}

# Print a skull jaw in ascii art.
print_skull_jaw()
{
	echo '|  s:   :+:-..  `...:h/NNNNNN:-:/:````.-..`.`.`/o  |'
	echo '|  o/` `.-      .:: -oyNNNNNN+- ````   ``:   `//y  |'
	echo '|   :y/`/.`..```.    .:mmmhNN/`    ` `...o-  .o:   |'
	echo '|    .oyhmmmmh/y:.  ```+hs+ds-`   .-syhmNNmho/.    |'
	echo '|      +NddmN+ yo  -.. -/-`/.      yy`+Nddmm-      |'
	echo '|       +y-:oh./s.`: - .`.` . . ` -y+`y+--d:       |'
	echo '|        d  -hh/so++/+/+//-/o:s/o+s+-sy-`.y        |'
	echo '|        m. :-yhoo//`/ : -- / /`+++//y:/ .o        |'
	echo '|        m. `.-s++:o++:+-//-+:o:o:+/o-+` -o        |'
	echo '|       `m-  ```-.///-:-:/-/././-/`:.:`  `h        |'
	echo '|        sh+        `+:-/:-/-/:`    `   :o:        |'
	echo '|         .so-`  `   `.-/o+/-.      ---++          |'
	echo '|           `-/s/..``          .```:y/-`           |'
	echo '|               -oo-`..   . `.``.++:               |'
	echo '|                 `+so+++++++/+o+.                 |'
	echo '|                                                  |'
	echo '----------------------------------------------------'
}

# Print a skull in ascii art folowed by a yellow string.
# First parameter: boolean to enable eye color.
# Second parameter: string to display.
# Third parameter: pause duration in second.
print_skull()
{
	clear
	print_skull_forehead
	print_skull_eyes $1
	print_skull_jaw
	printf '\e[1;33m%s\e[0m' "$2"
	sleep $3
}

# Print SSFAR in ascci art, folowed by a string and put the script in pause (for a period of time).
# First parameter: string to display (ex : loading bar).
# Second parameter: pause duration in second.
print_loading()
{
	clear
	echo "                                                                                                                         "
	echo "                                                                                                                         "
	echo "\e[0;34m          _____                   _____                   _____                   _____                   _____          \e[0m"
